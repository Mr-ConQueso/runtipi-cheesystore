{
  "services": [
    {
      "name": "cloudflare-ddns",
      "image": "timothyjmiller/cloudflare-ddns:latest",
      "internalPort": 80,
      "addPorts": [
        {
          "containerPort": 443,
          "hostPort": 443,
          "tcp": true,
          "udp": false
        }
      ],
      "environment": {
        "PUID": "1000",
        "PGID": "1000"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config.json",
          "containerPath": "/config.json",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "networkMode": "host",
      "securityOpt": [
        "no-new-privileges:true"
      ]
    }
  ]
}